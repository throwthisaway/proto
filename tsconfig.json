{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": "true"
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "temp_for_dev",
        "node_modules",
        "**/*.spec.ts"
    ],
    "compileOnSave": true,
    "types" : ["core-js", "node", "express", "ws", "express"]
}